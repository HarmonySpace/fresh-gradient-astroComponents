---
import Layout from "../layouts/Layout.astro";
import FreshIcon from "../components/icons/FreshIcon.astro";
import PrimaryButton from "../components/buttons/PrimaryButton.astro";
import AnchorButton from "../components/buttons/AnchorButton.astro";
import Card from "../components/Card.astro";

const frashIconWhidth = "calc(40% + 1rem)";
---

<Layout title="Fresh | Home">
  <main class="flex">
    <section class="flex presentation">
      <FreshIcon wh={frashIconWhidth} />
      <div class="titles">
        <h1>FRESH</h1>
        <p>My personal astro components</p>
      </div>
    </section>
    <section class="flex container">
      <h1 class="header-section">Buttons</h1>
      <div class="flex list">
        <PrimaryButton />
        <PrimaryButton text="Btn" bstyle="square" fstyle="border" />
        <PrimaryButton text="Send Message" bstyle="circle" fstyle="border" />
        <PrimaryButton text="Btn" bstyle="rounded" />
        <PrimaryButton text="Primary Button" bstyle="square" fstyle="fill" />
        <PrimaryButton text="Send value" bstyle="rounded" fstyle="border" />
        <AnchorButton text="Link" icon={false} />
        <AnchorButton text="A" bstyle="rounded" />
        <AnchorButton
          text="Anchor"
          bstyle="square"
          fstyle="fill"
          icon={false}
        />
        <AnchorButton text="About we and you" bstyle="square" fstyle="border" />
        <AnchorButton text="Go" bstyle="circle" fstyle="border" />
        <AnchorButton text="Link" />
        <AnchorButton text="Go to Home" bstyle="rounded" fstyle="border" />
        <AnchorButton text="Go" bstyle="circle" fstyle="border" icon={false} />
        <AnchorButton text="A" bstyle="rounded" icon={false} />
        <AnchorButton text="Anchor" bstyle="square" fstyle="fill" />
        <AnchorButton
          text="About we and you"
          bstyle="square"
          fstyle="border"
          icon={false}
        />

        <AnchorButton
          text="Go to Home"
          bstyle="rounded"
          fstyle="border"
          icon={false}
        />
      </div>
    </section>
    <selection class="flex container">
      <h1 class="header-section">Headers</h1>
      <div class="flex list">
        <h1>Heading 1</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <h4>Heading 4</h4>
        <h5>Heading 5</h5>
        <h6>Heading 6</h6>
      </div>
    </selection>
    <section class="flex container">
      <h1 class="header-section">Cards</h1>
      <div class="flex list">
        <Card />
        <Card
          title=" Loren"
          description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
          animation="zoom-off"
        />
        <Card
          title=" Loren"
          description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
          fill={false}
        />
        <div class="flex list2">
          <Card size="mediun" />
          <Card
            size="mediun"
            fill={false}
            animation="zoom-off"
            description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            fill={false}
          />
          <div class="flex list2">
            <Card size="small" />
            <Card size="small" fill={false} />
            <Card
              size="small"
              fill={false}
              animation="zoom-off"
              description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
              fill={false}
            />
          </div>
        </div>
      </div>
    </section>
  </main>

  <style>
    main,
    .icon,
    .titles,
    .titles h1,
    .titles p {
      width: 100%;
    }
    .title,
    p {
      text-align: center;
    }
    .container {
      margin: calc(1rem + 3dvh) 0;
      width: 80%;
    }
    .header-section {
      font-size: calc(2rem + 1vw);
      text-align: left;
    }
    .presentation {
      margin: calc(3rem + 10dvh) 0 calc(1rem + 1dvh) 0;
      max-width: 1000px;
    }
    .titles {
      transform: translateY(calc(-5rem + 3dvh));
    }
    .titles h1,
    .titles p {
      text-align: center;
    }
    .titles h1 {
      font-size: calc(4rem + 3vw);
      font-family: var(--ffB);
    }
    .titles p {
      font-size: calc(1.2rem + 1vw);
    }
    .list {
      margin: 2rem 0;
      justify-content: start;
      gap: calc(1rem + 1vw);
    }
    .list2 {
      margin: 2rem 0;
      justify-content: center;
      align-items: stretch;
      gap: calc(1rem + 1vw);
    }
  </style>
</Layout>
