---
import FreshIcon from "../FreshIcon.astro";
const {
  text = "Button",
  link = "#",
  bstyle = "circle",
  fstyle = "fill",
  icon = true,
} = Astro.props;

let col = "",
  col2 = "",
  col3 = "",
  fill = true,
  idgradient = "";

if (fstyle == "fill") {
  col = "var(--bg)";
  col2 = "var(--bg)";
  col2 = "var(--bg)";
} else {
  col = "var(--accent)";
  col2 = "var(--accent2)";
  col3 = "var(--accent3)";
  fill = false;
}

if (fill == true) {
  idgradient = "buttonFill";
} else {
  idgradient = "buttonBorder";
}

let frashIconWhidth = "calc(2rem + 1dvw)";
---

<a href={link} class:list={[bstyle, fstyle]}>
  <span>{text}</span>
  {
    icon && (
      <div class="icon">
        <FreshIcon
          wh={frashIconWhidth}
          gid={idgradient}
          cl1={col}
          cl2={col2}
          cl3={col3}
        />
      </div>
    )
  }
</a>

<style>
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.2rem 3rem;
    font-size: calc(0.8rem + 0.5vw);
    border: none;
    outline: none;
    text-decoration: none;
  }
  a:hover {
    cursor: pointer;
  }
  span {
    color: var(--bg);
    font-family: var(--ff);
  }
  .icon {
    transition: all 0.5s ease;
    transform: translateX(1.5rem);
  }
  .circle,
  .circle::before {
    border-radius: 50px;
  }
  .rounded {
    border-radius: 12px;
  }
  .rounded::before {
    border-radius: 15px;
  }
  .square,
  .square::before {
    border-radius: 0px;
  }
  .border {
    position: relative;
    text-align: center;
    color: var(--fr);
    background: var(--bg);
    transition: all 0.5s ease;
  }
  .border span {
    color: var(--fr);
    transition: all 0.5s ease;
  }
  .border::before {
    content: "";
    position: absolute;
    top: -3px;
    left: -3px;
    bottom: -3px;
    right: -3px;
    z-index: -1;
    will-change: transform;
    transition: all 0.5s ease;
  }
  .fill,
  .border::before {
    transition: all 0.5s ease;
    background-image: linear-gradient(
      45deg,
      var(--accent) 0%,
      var(--accent2) 50%,
      var(--accent3) 100%
    );
    background-size: 200% auto;
  }
  .fill:hover,
  .fill:focus,
  .border:hover::before,
  .border:focus::before {
    background-position: right center;
  }
  .fill:hover,
  .fill:focus,
  .border:hover span {
    transform: scale(1.1);
  }
  .fill:hover .icon,
  .fill:focus .icon,
  .border:hover .icon {
    transition: all 0.5s ease;
    transform: translateX(1rem);
  }
</style>
