---
const { text = "Button", bstyle = "circle", fstyle = "fill" } = Astro.props;
---

<button class:list={[bstyle, fstyle]}>
  <span>{text}</span>
</button>

<style>
  button {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem 2.5rem;
    font-size: calc(1rem + 0.5vw);
    border: none;
    outline: none;
  }
  button:hover {
    cursor: pointer;
  }
  span {
    color: var(--bg);
    font-family: var(--ffB);
  }
  .circle,
  .circle::before {
    border-radius: 50px;
  }
  .rounded {
    border-radius: 12px;
  }
  .rounded::before {
    border-radius: 15px;
  }
  .square,
  .square::before {
    border-radius: 0px;
  }
  .fill,
  .border::before {
    transition: all 0.5s ease;
    background-image: linear-gradient(
      45deg,
      var(--accent) 0%,
      var(--accent2) 50%,
      var(--accent3) 100%
    );
    background-size: 200% auto;
  }
  .fill:hover,
  .fill:focus,
  .border:hover::before,
  .border:focus::before {
    background-position: right center;
  }
  .fill:hover,
  .fill:focus,
  .border:hover span {
    transform: scale(1.1);
  }
  .border {
    position: relative;
    text-align: center;
    color: var(--fr);
    background: var(--bg);
    transition: all 0.5s ease;
  }
  .border span {
    color: var(--fr);
    transition: all 0.5s ease;
  }
  .border::before {
    content: "";
    position: absolute;
    top: -3px;
    left: -3px;
    bottom: -3px;
    right: -3px;
    z-index: -1;
    will-change: transform;
    transition: all 0.5s ease;
  }
</style>
