---
const {
  title = "Card",
  description = "This is a Card",
  animation = "zoom-in",
  fill = true,
  size = "large",
  bstyle = "rounded",
} = Astro.props;
---

<div
  class="flex container gradient-bg"
  class:list={[
    animation,
    size,
    { rounded: bstyle == "rounded", square: bstyle == "square" },
  ]}
>
  <div
    class="flex container-inside"
    class:list={[
      { rounded2: bstyle == "rounded", square: bstyle == "square" },
      { fill: fill, stroke: !fill },
    ]}
  >
    <h1>{title}</h1>
    <p>{description}</p>
  </div>
</div>

<style>
  .container {
    flex-grow: 1;
    flex-shrink: 1;
    align-items: stretch;
    padding: calc(0.1rem + 0.2dvh) calc(0.1rem + 0.2dvh);
  }
  .container-inside {
    align-items: start;
    align-content: start;
    padding: calc(1rem + 1dvh) calc(2rem + 1dvh);
  }
  h1,
  p {
    color: var(--bg);
  }
  h1 {
    font-size: calc(2rem + 1dvw);
  }
  p {
    font-size: calc(1rem + 1dvw);
  }
  .zoom-in,
  .zoom-off {
    transform: all 0.2s ease;
  }
  .zoom-in:hover {
    transform: scale(1.02);
  }
  .zoom-off:hover {
    transform: scale(0.98);
  }
  .mediun {
    flex-basis: 400px;
  }
  .small {
    flex-basis: 200px;
  }
  .stroke {
    background-color: var(--bg);
  }
  .stroke h1,
  .stroke p {
    color: var(--fr);
  }
  .rounded {
    border-radius: 20px;
  }
  .rounded2 {
    border-radius: 17px;
  }
</style>
